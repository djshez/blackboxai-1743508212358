<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark application theme -->
    <style name="Theme.HT2000OBD" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        
        <!-- Secondary brand colors -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/colorBackgroundDark</item>
        <item name="colorSurface">@color/colorSurfaceDark</item>
        <item name="colorOnBackground">@color/colorOnBackgroundDark</item>
        <item name="colorOnSurface">@color/colorOnSurfaceDark</item>

        <!-- Card styles -->
        <item name="materialCardViewStyle">@style/Widget.App.CardView.Dark</item>
        
        <!-- Button styles -->
        <item name="materialButtonStyle">@style/Widget.App.Button.Dark</item>
        
        <!-- Text appearance -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.App.Headline1.Dark</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.App.Headline2.Dark</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.App.Headline3.Dark</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.App.Headline4.Dark</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.App.Headline5.Dark</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.App.Headline6.Dark</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.App.Subtitle1.Dark</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.App.Subtitle2.Dark</item>
        <item name="textAppearanceBody1">@style/TextAppearance.App.Body1.Dark</item>
        <item name="textAppearanceBody2">@style/TextAppearance.App.Body2.Dark</item>
        <item name="textAppearanceButton">@style/TextAppearance.App.Button.Dark</item>
        <item name="textAppearanceCaption">@style/TextAppearance.App.Caption.Dark</item>
        <item name="textAppearanceOverline">@style/TextAppearance.App.Overline.Dark</item>
    </style>

    <!-- Dark Card style -->
    <style name="Widget.App.CardView.Dark" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="android:layout_marginHorizontal">8dp</item>
        <item name="android:layout_marginVertical">4dp</item>
        <item name="cardBackgroundColor">@color/colorSurfaceDark</item>
    </style>

    <!-- Dark Button style -->
    <style name="Widget.App.Button.Dark" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
    </style>

    <!-- Dark Text styles -->
    <style name="TextAppearance.App.Headline1.Dark" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/colorOnBackgroundDark</item>
    </style>

