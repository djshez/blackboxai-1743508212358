<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".CodeGenius2Activity">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to CodeGenius2"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/startCodingButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Coding"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/manageProjectsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage Projects"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/aiAssistanceButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AI Assistance"
        android:layout_marginTop="8dp"/>

</LinearLayout>